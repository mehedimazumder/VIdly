@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Discount Rate:&nbsp; @Model.MembershipType.DiscountRate%</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Birth Date:&nbsp;@Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>
@Html.ActionLink("Edit","Edit","Customers", new { Id = Model.Id }, new{@class="btn btn-primary"})
